{
  "name": "smooth-line-graph",
  "version": "0.0.1",
  "description": "React component to draw a smooth, SVG-based line graph",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production babel src --out-dir dist",
    "prepublish": "npm run build",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --require babel-core/register \"test/**/*.spec.js\"",
    "lint": "NODE_ENV=test ./node_modules/.bin/eslint lib test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felamaslen/smooth-line-graph.git"
  },
  "keywords": [
    "graph",
    "line",
    "svg",
    "react"
  ],
  "author": "Fela Maslen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/felamaslen/smooth-line-graph/issues"
  },
  "homepage": "https://github.com/felamaslen/smooth-line-graph#readme",
  "babel": {
    "env": {
      "include": [
        "transform-class-properties"
      ],
      "production": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "ie >= 10"
                ]
              }
            }
          ],
          "stage-0"
        ]
      },
      "test": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "node": "8"
              }
            }
          ],
          "stage-0"
        ]
      }
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "luxon": "^0.5.8",
    "react": "^16.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.7.0",
    "fs-extra": "^5.0.0",
    "mocha": "^5.0.5",
    "react-dom": "^16.2.0"
  }
}
